  <main>
    <div class="container-fluid">
      <form action="/admin/create-exam" method="post" id="createEx" enctype="multipart/form-data">
        <div class="container w-75 pb-3 mt-3 create_exam_form">

          <form id="exam-details">
            <h1 class="display-4" style="text-align: center;">EXAM DETAILS</h1>
            <hr>
            <div class="form-group">
              <label for="studentupload">CHOOSE STUDENT FILE</label>
              <input type="file" name="studentupload" class="form-control-file" id="studentupload">
            </div>
            <hr>
            <div class="form-group">
              <label for="questionupload">CHOOSE EXAM FILE</label>
              <input type="file" name="questionupload" class="form-control-file" id="questionupload">
            </div>
            <hr>
            <div class="form-group row">
              <label for="tmail" class="col-sm-2 col-form-label">Teacher's email</label>
              <div class="col-sm-10">
                <input type="email" class="form-control" name="tmail" id="tmail" required />
              </div>

            </div>
            <hr>
            <div class="form-group row">
              <label for="num_options" class="col-sm-2 col-form-label">Number of options</label>
              <div class="col-sm-10">
                <input type="number" class="form-control" name="num_options" id="num_options" required />
              </div>

            </div>
            <hr>
            <div class="form-group row">
              <label for="subject_code" class="col-sm-2 col-form-label">Subject Code</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" name="subject_code" id="subject_code" required />
              </div>

            </div>
            <hr>
            <div class="form-group row">
              <label for="exam_date" class="col-sm-2 col-form-label">Exam Date</label>
              <div class="col-sm-10">
                <input type="date" class="form-control" name="exam_date" id="exam_date" required />
              </div>

            </div>
            <hr>
            <div class="form-group row">
              <label for="examination_name" class="col-sm-2 col-form-label">Name of Examination</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" name="examination_name" id="examination_name" required />
              </div>

            </div>
            <hr>
            <div class="form-group row">
              <label for="start_time" class="col-sm-2 col-form-label">Start Time</label>
              <div class="col-sm-10">
                <input type="time" class="form-control" name="start_time" id="start_time" required />
              </div>

            </div>
            <hr>
            <div class="form-group row">
              <label for="end_time" class="col-sm-2 col-form-label">End Time</label>
              <div class="col-sm-10">
                <input type="time" class="form-control" name="end_time" id="end_time" required />
              </div>

            </div>
            <hr>
            <div class="form-group row">
              <label for="total_marks" class="col-sm-2 col-form-label">Total Marks</label>
              <div class="col-sm-10">
                <input type="number" class="form-control" name="total_marks" id="total_marks" min="0" />
              </div>

            </div>
            <hr>
            <div class="form-group row">
              <label for="passing_marks" class="col-sm-2 col-form-label">Passing Marks</label>
              <div class="col-sm-10">
                <input type="number" class="form-control" name="passing_marks" id="passing_marks" min="0" />
              </div>

            </div>
            <hr>
            <div class="text-center">
              <input class="upload_btn" type="submit" value="Create Exam" />
            </div>

          </form>
        </div>
    </div>
